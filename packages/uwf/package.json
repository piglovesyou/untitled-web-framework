{
  "name": "uwf",
  "version": "0.0.0",
  "engines": {
    "node": ">=10.15.3"
  },
  "bin": "tools/cli-entrypoint.js",
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link": "^1.2.11",
    "apollo-link-error": "^1.1.10",
    "apollo-link-http": "^1.5.14",
    "apollo-link-logger": "^1.2.3",
    "apollo-link-schema": "^1.2.2",
    "apollo-server": "^2.4.8",
    "apollo-server-express": "^2.4.8",
    "body-parser": "^1.18.3",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.4",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "graphql": "^14.0",
    "graphql-tag": "^2.10.1",
    "history": "^4.9.0",
    "isomorphic-style-loader": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.1",
    "node-fetch": "^2.3.0",
    "normalize.css": "^8.0.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "pretty-error": "^2.1.1",
    "query-string": "^6.4.0",
    "react": "^16.8.4",
    "react-apollo": "^2.5.2",
    "react-dom": "^16.8.4",
    "sequelize": "^5.1.0",
    "serialize-javascript": "^1.6.1",
    "source-map-support": "^0.5.11",
    "sqlite3": "^4.0.8",
    "universal-router": "^8.1.0",
    "whatwg-fetch": "^3.0.0"
  },
  "lint-staged": {
    "ignore": [
      "package.json"
    ],
    "linters": {
      "*.{js,jsx}": [
        "npm run fix-js",
        "git add --force"
      ],
      "*.{json,md,graphql}": [
        "prettier --write",
        "git add --force"
      ],
      "*.{css,less,styl,scss,sass,sss}": [
        "stylelint --fix",
        "git add --force"
      ]
    }
  },
  "scripts": {
    "precommit": "#lint-staged",
    "lint-js": "eslint --ext .ts --ext .tsx --ignore-path .gitignore --ignore-pattern \\\\\\\"!**/.*\\\\\\\" .",
    "lint-css": "stylelint \\\"src/**/*.{css,less,styl,scss,sass,sss}\\\"",
    "lint": "yarn codegen && yarn tsc && yarn run lint-js && yarn run lint-css",
    "fix-js": "yarn run lint-js --fix",
    "fix-css": "yarn run lint-css --fix",
    "fix": "yarn run fix-js && yarn run fix-css",
    "test": "jest",
    "test-watch": "yarn run test --watch --notify",
    "test-cover": "yarn run test --coverage",
    "codegen": "babel-node --extensions '.ts' tools/run codegen",
    "coverage": "yarn run test-cover && opn coverage/lcov-report/index.html",
    "build-stats": "yarn run build --release --analyse",
    "build": "babel -d tools -x '.ts' tools",
    "watch": "babel --watch --source-maps inline -d tools -x '.ts' tools"
  }
}
